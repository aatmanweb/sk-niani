<div style='width:100%; height:auto; position:relative; background:#ccc;'>

    <%= link_to("Back to Menu", {:controller => 'access', :action => 'menu'}, :class => 'back-to-menu') %>

    <%= link_to("Logout", {:controller => 'access', :action => 'logout'}, :class => 'logout')%>

    <div class="top-linebar">Listing Quotes Images</div>

    <div style="clear:both;"></div>
</div>

<div style="height:60px;">
<%= link_to 'Add Keyword to Home page', :action => 'new', :meta_id => '0', :meta_type => 'MainHomePage'%>
</div>	

<div style="clear:both;"></div>

<div class="subject list">
  	
  <table class="listing" summary="Subject list">
    <tr class="header-top">
      <th width=800 >keyword</th>
      <th>Meta ID</th>
      <th>Meta Type</th>
      <th>Actions</th>
    </tr>
    <% @keyword.each do |key| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= key.keyword %></td>
      <td class="center"><%= key.meta_id %></td>
      <td class="center"><%= key.meta_type %></td>
      <td class="center">
        <%= link_to 'Show', {:action => 'show', :id => key }, :class => 'action show2' %>
	<%= link_to 'Edit', {:action => 'edit', :keyword => key }, :class => 'action edit' %>
	<%= link_to 'Destroy', {:action => 'delete', :id => key }, data: { confirm: 'Are you sure?' }, :class => 'action delete' %>
      </td>
      
    </tr>
    <% end %>
  </table>
</div>

<%= will_paginate @keyword %>

