<% @page_title = "Delete Section: #{@section.name}" %>
<div style='width:100%; height:auto; position:relative; background:#ccc;'>

<%= link_to("Back to List", {:action => 'list', :page_id => @page.id}, :class => 'back-to-menu') %>

<%= link_to("Logout", {:controller => 'access', :action => 'logout'}, :class => 'logout')%>

<div class="top-linebar">Delete Section</div>

<div style="clear:both;"></div>
</div>

<div class="innerpage-form-background">
  
  <%= form_for(:section, :url => {:action => 'destroy', :id => @section.id, :page_id => @page.id}) do |f| -%>

    <p class="delete-result-text">Are you sure you want to permanently delete this section?</p>
  
    <p class="delete-result-text-2"><%= @section.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag "Delete Section", :class => 'innerpage-form-button' %>
    </div>
    
  <% end %>
</div>
