<% @page_title = "Delete Admin User: #{@admin_user.name}" %>

<div style='width:100%; height:auto; position:relative; background:#ccc;'>

<%= link_to("Back to List", {:action => 'list'}, :class => 'back-to-menu') %>

<%= link_to("Logout", {:controller => 'access', :action => 'logout'}, :class => 'logout')%>

<div class="top-linebar">Delete Admin User</div>

<div style="clear:both;"></div>
</div>


<div class="innerpage-form-background">
  
  <%= form_for(:admin_user, :url => {:action => 'destroy', :id => @admin_user.id}) do |f| -%>

    <p class="delete-result-text">Are you sure you want to permanently delete this admin user?</p>
  
    <p class="delete-result-text-2"><%= @admin_user.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag "Delete Admin User", :class => 'innerpage-form-button' %>
    </div>
    
  <% end %>
</div>
