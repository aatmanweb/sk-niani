<div style='width:100%; height:auto; position:relative; background:#ccc;'>

<%= link_to("Back to Menu", {:controller => 'access', :action => 'menu'}, :class => 'back-to-menu') %>

<%= link_to("Logout", {:controller => 'access', :action => 'logout'}, :class => 'logout')%>

<div class="top-linebar">Listing topics</div>

<div style="clear:both;"></div>
</div>

<div style="height:60px;">

<%= link_to 'New Topic', new_topic_path, :class => 'add-new-subject' %>

</div>
<div style="clear:both;"></div>
<%= form_tag topics_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
  </p>
<% end %>

<div class="section list">
<table class="listing" summary="Section list">
    <tr class="header-top">
      <th width="75%">Topic Name</th>
      <th width="25%">Action</th>
    </tr>
    <% @topics.each do |topic| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= topic.topic_name %></td>
      <td><%= link_to("Add Image", {:controller => 'quoteimages', :action => 'new', :quoteimageable_id => topic.id, :quoteimageable_type => 'Topic'}, :class => 'action show') %>
	<%= link_to 'Show', topic, :class => 'action show' %>
	<%= link_to 'Edit', edit_topic_path(topic), :class => 'action edit' %>
	<%= link_to 'Destroy', topic, method: :destroy, data: { confirm: 'Are you sure?' }, :class => 'action delete' %></td>
    </tr>
    <% end %>
  </table>

<br/><br/>
<%= will_paginate @topics %>
    </div>



