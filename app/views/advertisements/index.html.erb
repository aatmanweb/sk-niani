<% @page_title = "Advertisement Location :" %>

<div style='width:100%; height:auto; position:relative; background:#ccc;'>

<div class="top-linebar">Advertisement Location</div>

<div style="clear:both;"></div>
</div>

<%= form_for(:advertise, :url => {:action => 'new'}) do |f| %>
<div class="subject list" style='margin-top: 50px;'>

<p style="margin-left: 120px; "><strong> </strong></p>

  <table summary="Advertisement list">
  <tr class="header-top">
    <th colspan=4 style="text-align: center;"> Select Location Type: </th>
  </tr>
  <tr>
    <td width=100>  <%=  f.radio_button(:location_type, "Subject") %>  Subject </td>
    <td width=200 style="float: left;">  <%=  f.radio_button(:location_type, "SubSubject") %> Sub Subjects </td>
    <td width=100 style="float: left;">  <%=  f.radio_button(:location_type, "Section") %>  Sections </td> 
    <td width=100 style="float: left;">  <%#=  f.radio_button(:location_type, "Page") %><!-- Pages  -->
   </td> 
  </tr>

  <tr>
    <td colspan=3 style="float: right;">  <%= f.submit "Submit", :class => 'innerpage-form-button' %> </td>    
    <td> &nbsp; </td>
  </tr>  
</table>
</div>
<% end %>
