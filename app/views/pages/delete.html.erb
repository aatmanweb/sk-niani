<% @page_title = "Delete Page: #{@page.name}" %>
<div style='width:100%; height:auto; position:relative; background:#ccc;'>

<%= link_to("Back to List", {:action => 'list', :subject_id => @subject.id}, :class => 'back-to-menu') %>

<%= link_to("Logout", {:controller => 'access', :action => 'logout'}, :class => 'logout')%>

<div class="top-linebar">Delete Page</div>

<div style="clear:both;"></div>
</div>


<div class="innerpage-form-background">
  
  <%= form_for(:page, :url => {:action => 'destroy', :id => @page.id, :subject_id => @subject.id}) do |f| -%>

    <p class="delete-result-text">Are you sure you want to permanently delete this page?</p>
  
    <p class="delete-result-text-2"><%= @page.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag "Delete Page", :class => 'innerpage-form-button' %>
    </div>
    
  <% end %>
</div>
