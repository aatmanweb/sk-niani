<% @page_title = "Subjects List" %>
<div style='width:100%; height:auto; position:relative; background:#ccc;'>

<%= link_to("Back to Menu", {:controller => 'access', :action => 'menu'}, :class => 'back-to-menu') %>

<%= link_to("Logout", {:controller => 'access', :action => 'logout'}, :class => 'logout')%>

<div class="top-linebar">Subjects</div>

<div style="clear:both;"></div>
</div>
<div style="height:60px;">

<%= link_to("Add New Subject", {:action => 'new'}, :class => 'add-new-subject') %>
<%= link_to("Add Advertisement", {:controller => 'advertisements', :action => 'index'}, :class => 'add-new-subject') %>
<div class="subject-found">
<% if(@subjects) %><%= pluralize(@subjects.size, 'subject') %> found</div>

</div>

<div style="clear:both;"></div>


<div class="subject list">
  	
  <table class="listing" summary="Subject list">
    <tr class="header-top">
      <th>Position</th>
      <th>Subject</th>
      <th>Permalink</th>
      <th>Icon Image</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= subject.position %></td>
      <td><%= subject.name %></td>
      <td><%= subject.permalink %></td>
      <td><%= subject.icon_image %></td>
      <td class="center"><%= status_tag(subject.visible) %></td>
      <td class="center"><%= subject.pages.size %></td>
      <td class="actions">
	  <%= link_to("View Sub Subjects", {:controller => 'sub_subjects', :action => 'list', :subject_id => subject.id}, :class => 'action show') %>
<%= link_to("Add Image", {:controller => 'images', :action => 'new', :imageable_id => subject.id, :imageable_type => 'Subject'}, :class => 'action show') %>
        <%= link_to("View Pages", {:controller => 'pages', :action => 'list', :subject_id => subject.id}, :class => 'action view') %>
        <%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'action show2') %>
        <%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => subject.id}, :class => 'action delete') %>
<%= link_to("Add keyword", {:controller => 'search_eng_opts', :action => 'new', :meta_id => subject.id, :meta_type => 'Subject'}, :class => 'action show') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
<% end %>
