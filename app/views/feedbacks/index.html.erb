<% @page_title = "Feedback List" %>
<div style="width:100%; height:auto; position:relative; background:#ccc;">
<%= link_to("Logout", {:controller => 'access', :action => 'logout'}, :class => 'logout')%>
<div class="top-linebar">Listing feedbacks</div>
<div style="clear:both;"></div>
</div>
<div style="height:60px;">


</div>

<div style="clear:both;"></div>


<div class="subject list">
<table class="listing" summary="Subject list">
  <tr class="header-top">
    <th>Name</th>
    <th>Emailid</th>
    <th>Feedback</th>
    <th>Visible</th>
    <th colspan=3>Action</th>

  </tr>

<% @feedbacks.each do |feedback| %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%= feedback.name %></td>
    <td><%= feedback.emailid %></td>
    <td><%=(feedback.feedback).html_safe %></td>
    <td><%= status_tag(feedback.visible) %></td>
    <td class="actions"><%= link_to('Show', feedback, :class => 'action view')%>
    <%= link_to('Edit', edit_feedback_path(feedback), :class => 'action edit') %>
    <%= link_to('Delete', {:action => 'delete' ,:id => feedback.id}, :class => 'action delete')%></td>
  </tr>
<% end %>
</table>
</div>
<br />


